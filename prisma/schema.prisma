generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int           @id @default(autoincrement())
  description  String
  price        Int
  currency     String
  sizes        String[]
  defaultSize  String
  colors       String[]
  defaultColor String
  bestSeller   Boolean
  image        String
  subcategory  String
  rating       Int
  discount     Int
  newArrival   Boolean
  tags         String[]
  categoryid   Int
  creatAt      DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         String
  ProducCart   ProducCart[]
  category     Category      @relation(fields: [categoryid], references: [id])
  receiptItems ReceiptItem[]
}

model Cart {
  id         Int          @id @default(autoincrement())
  userid     Int          @unique
  user       User         @relation(fields: [userid], references: [id], onDelete: Cascade)
  ProducCart ProducCart[]
}

model ProducCart {
  productid     Int
  cartid        Int
  cart          Cart    @relation(fields: [cartid], references: [id], onDelete: Cascade)
  product       Product @relation(fields: [productid], references: [id], onDelete: Cascade)
  selectedcolor String?
  selectedsize  String?
  quantity      Int     @default(1)

  @@unique([productid, cartid])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  phone     String
  image     String?
  address   String
  creatAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstname String
  role      Role     @default(USER)
  lastname  String
  password  String
  uuid      String   @unique @default(uuid()) @db.Uuid
  Cart      Cart?
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Product Product[]
}

model Receipt {
  id            Int    @id @default(autoincrement())
  userId        Int
  orderId       String @unique
  name          String
  email         String @unique
  phone         String
  amount        Int
  transactionId String
  status        String

  createdAt    DateTime      @default(now())
  receiptItems ReceiptItem[]
}

model ReceiptItem {
  id        Int    @id @default(autoincrement())
  receiptId Int
  name      String
  price     Int
  quantity  Int
  total     Int
  productId Int
  image     String 

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  receipt Receipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)

  @@unique([productId, receiptId])
}

enum Role {
  USER
  ADMIN
}
